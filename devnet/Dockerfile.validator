FROM rust:latest as builder
WORKDIR /app
COPY . .
RUN cargo build --release --bin ionova_node

FROM debian:bookworm-slim
RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*
COPY --from=builder /app/target/release/ionova_node /usr/local/bin/ionova_node
ENTRYPOINT ["ionova_node"]
