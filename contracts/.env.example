# Environment variables for Hardhat deployment

# Private key for deployment (DO NOT COMMIT)
PRIVATE_KEY=your_private_key_here

# API Keys
INFURA_API_KEY=your_infura_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key

# Ionova Network (if custom)
IONOVA_RPC_URL=http://localhost:8545
IONOVA_CHAIN_ID=1337

# Contract addresses (update after deployment)
USDC_ADDRESS=0x0000000000000000000000000000000000000000
USDT_ADDRESS=0x0000000000000000000000000000000000000000
IONX_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
TREASURY_ADDRESS=0x0000000000000000000000000000000000000000

# Sale configuration
SALE_START_TIME=1700000000
SALE_END_TIME=1710000000

# Gas reporting
REPORT_GAS=true
